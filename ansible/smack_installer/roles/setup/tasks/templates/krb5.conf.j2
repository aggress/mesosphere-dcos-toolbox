[logging]
    default = STDERR
    kdc = STDERR
    admin_server = STDERR

[libdefaults]
    default_realm = {{ realm }}
    dns_lookup_realm = false
    dns_lookup_kdc = false
    ticket_lifetime = 24h
    renew_lifetime = 7d
    forwardable = true

[realms]
    {{ realm }} = {
        kdc = {{ ad_hostname }}:88
    }

[domain_realm]
    .{{ kafka_cluster_identifier }}.autoip.dcos.thisdcos.directory = {{ ad_hostname }}
    {{ kafka_cluster_identifier }}.autoip.dcos.thisdcos.directory = {{ ad_hostname }}